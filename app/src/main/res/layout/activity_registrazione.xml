<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Registrazione">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="35pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/retroica"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_bw"
                android:fontFamily="@font/retroica"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:textColor="@color/grigio" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/retroica"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_bw"
                android:fontFamily="@font/retroica"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:textColor="@color/grigio" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/retroica"
                android:text="Conferma Password"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/passwordConferma"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_bw"
                android:fontFamily="@font/retroica"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:textColor="@color/grigio" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/retroica"
                android:text="Citta' di Provenienza"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/citta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_bw"
                android:fontFamily="@font/retroica"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:textColor="@color/grigio" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/retroica"
                android:text="Data di nascita"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_input_bw"
                android:fontFamily="@font/retroica"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:textColor="@color/grigio" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/registrazione"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bottone_tondo"
                android:fontFamily="@font/retroica"
                android:text="registrati"
                android:textAllCaps="false"
                android:textSize="20dp"
                app:backgroundTint="@color/black" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>